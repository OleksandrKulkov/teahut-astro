{
	"useTabs": true,
	"tabWidth": 2,
	"printWidth": 80,
	"bracketSameLine": true,
	"jsxSingleQuote": true,
	"singleQuote": true,
  "prettier.singleAttributePerLine": true,
	"vueIndentScriptAndStyle": true,
	"plugins": [
		"prettier-plugin-astro",
		"prettier-plugin-css-order",
		"prettier-plugin-tailwindcss"
	],
	"overrides": [
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		}
	],
	"pluginSearchDirs": false
}
