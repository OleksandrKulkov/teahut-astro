---
import { formatDate } from "../utils/helpers.js";

const { title, description, url, pubDate } = Astro.props;
---

<a class="post-preview__link" href={url}>
    <article class="post-preview__article">     
      <div class="post-preview__text">
        <h2 class="post-title">{title}</h2>
        <time class="post-preview__date">Опубліковано: {formatDate(pubDate)}</time>
        <p class="post-preview__description">{description}</p>
        <!-- {post.data?.category && <p class="post-preview__category">{post.data.category}</p>} -->
      </div>
    </article>
</a>

<style>
  * {
    margin: 0;
    padding: 0;
  }
    .post-preview__link:nth-child(1) {
      grid-column: 1 / -1;
    }
    .post-preview__link {
      text-decoration: none;
    }
    .post-preview__img {
      border: 1px solid grey;
    }
    .post-preview__link:hover .post-preview__img {
      box-shadow: rgba(0, 0, 0, 0.1) 0 10px 20px 0;
      transform: scale(1.1);
    }
    .post-preview__link:hover .post-preview__text {
      transform: translateX(1rem);
    }
    .post-preview__text {
      transition: transform 0.2s ease-in-out;
    }
    .post-preview__category {
      width: fit-content;
      padding: 0.25rem 0.75rem;
      background-color: var(--theme-surface-1);
      border-radius: 2rem;
      margin-bottom: 0.5rem;
      font-size: var(--step--2);
      /* color: #666; */
    }
    .post-preview__text h2{
      font-size: var(--font-size-4);
    }
    .post-preview__text h4{
      font-size: var(--font-size-0);
    }

    .post-preview__text time {
      font-size: var(--font-size-1);
      font-style: italic;
      color: #666;
    }
    .post-preview__img {
      width: 250px;
      height: 160px;
      object-fit: cover;
      border-radius: 1rem;
      transition: box-shadow 0.2s ease-in-out, transform 0.2s ease-in-out;
    }
    .post-preview__date {
      
    }
    @media (max-width: 636px) {
      .post-preview__article {
        grid-template-columns: 1fr;
      }
      .post-preview__img {
        aspect-ratio: 16/9;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      .post-preview__text {
        margin-top: 1rem;
      }
      .post-preview__link:hover .post-preview__img {
        box-shadow: none;
        transform: none;
      }
      .post-preview__link:hover .post-preview__text {
        transform: none;
      }
    }
</style>