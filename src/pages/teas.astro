---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogTeas from '../components/BlogTeas.astro';

const allTeas = await getCollection("teas");
const pageTitle = "Наші чаї";
const containerMaxWidth = "90%";
---

<BaseLayout {pageTitle} {containerMaxWidth}>
    <h1>{pageTitle}</h1>
    <ul class="teas-preview">
        {allTeas.map((tea) => 
        <BlogTeas 
            url={`/teas/${tea.slug}/`}
            title={tea.data.title}
            subtitle={tea.data.subtitle}
            image={tea.data.image}
            pubDate={tea.data.pubDate}
            price={tea.data.price}
        />)}
    </ul>
</BaseLayout>

<style>
    .teas-preview {
        display: grid;
        row-gap: 3rem;
        padding: 0;
    }
</style>