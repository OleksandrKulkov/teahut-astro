---
import logo from '../../public/logo.png';

import { Image } from 'astro:assets';
---

<header class='p-4 text-lg'>
	<div
		class='flex items-center justify-between overflow-hidden rounded-2xl bg-choco'>
		<nav>
			<ul class='flex items-center space-x-16'>
				<li>
					<a
						aria-label='Логотип Чайної Хатинки'
						class='block h-14 w-14 rounded-2xl bg-orange'
						href='/'>
						<Image src={logo} class='p-[0.45rem]' alt='Логотип' />
					</a>
					<li>
						<a
							class='font-medium uppercase text-gray-900 dark:text-gray-100 dark:hover:text-yellow-5 transition-colors'
							href='/'>Хатинка</a
						>
					</li>
					<li>
						<a
							class='font-medium uppercase text-gray-900 dark:text-gray-100 dark:hover:text-yellow-5 transition-colors'
							href='/teas'>Наші чаї</a
						>
					</li>
					<li>
						<a
							class='font-medium uppercase text-gray-900 dark:text-gray-100 dark:hover:text-yellow-5 transition-colors'
							href='/'>Читальня</a
						>
					</li>
				</li>
			</ul>
		</nav>

		<button
			data-theme-toggle
			type='button'
			aria-label='Toggle the theme color'
			class='flex h-14 w-14 items-center justify-center'>
			<svg
				aria-hidden='true'
				xmlns='http://www.w3.org/2000/svg'
				viewBox='0 0 20 20'
				fill='currentColor'
				class='h-6 w-6 text-gray-900 dark:hidden'>
				<path
					d='M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z'
				></path>
			</svg>

			<svg
				aria-hidden='true'
				xmlns='http://www.w3.org/2000/svg'
				viewBox='0 0 20 20'
				fill='currentColor'
				class='hidden h-6 w-6 text-gray-100 dark:block'>
				<path
					fill-rule='evenodd'
					d='M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z'
					clip-rule='evenodd'></path>
			</svg>
		</button>
	</div>
</header>
