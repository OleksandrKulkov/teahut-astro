{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@public/*": ["public/*"],
			"@layouts/*": ["src/layouts/*"],
			"@partials/*": ["src/partials/*"],
			"@pages/*": ["src/pages/*"],
			"@utils": ["src/js/base/utils.js"],
			"@js/*": ["src/js/*"],
      "@scss/*": ["src/scss/*"]
		},
		"strictNullChecks": true,
		"allowJs": true
	}
}